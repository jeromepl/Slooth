{
    "manifest_version": 2,

    "name": "Slooth",
    "description": "This extension allows you to quickly navigate the web by recording and running macros",
    "version": "0.2",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["lib/jquery-2.2.0.min.js", "js/jqueryPlugins.js", "js/execute.js", "js/macroCapture.js"]
        }
    ],

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false // TODO what does this do?
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Slooth"
    },

    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "webNavigation"
    ]
}
