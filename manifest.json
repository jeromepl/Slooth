{
    "manifest_version": 2,

    "name": "Slooth",
    "description": "This extension allows you to quickly navigate the web by recording and running macros",
    "version": "0.1",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["lib/jquery-2.2.0.min.js", "js/execute.js", "js/getQuery.js", "js/macroCapture.js", "js/macroRecordingInjection.js"]
        }
    ],

    "background": {
        "scripts": ["lib/jquery-2.2.0.min.js", "js/redirect.js"],
        "persistent": false
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Slooth"
    },

    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "https://ajax.googleapis.com/"
    ]
}
