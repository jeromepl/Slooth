{
  "manifest_version": 2,

  "name": "Easy Macros",
  "description": "This extension allows you to quickly navigate the web by recording and running macros",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/jquery-2.2.0.min.js", "js/execute.js", "js/macroCapture.js"]
    }
  ],
	
  "background": {
    "scripts": ["lib/jquery-2.2.0.min.js", "js/redirect.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "https://ajax.googleapis.com/"
  ]
}
